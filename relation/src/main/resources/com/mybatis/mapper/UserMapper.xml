<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.UserMapper">
    <!--order是关键字，所以为了不报错使用mybatis.order-->
    <select id="findAll" resultMap="userMap">
        /*因为两个表中有重名的字段（id），所以使用别名区分*/
        select *,order.id orderid
        from user
                 join mybatis.order on order.uid = user.id;
    </select>
    <resultMap id="userMap" type="com.mybatis.pojo.User">
        <id property="id" column="id"></id>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <collection property="orders" ofType="com.mybatis.pojo.Order" >
            <id property="id" column="orderid"></id>
            <result property="orderTime" column="ordertime"></result>
            <result property="total" column="total"></result>
        </collection>
    </resultMap>
</mapper>